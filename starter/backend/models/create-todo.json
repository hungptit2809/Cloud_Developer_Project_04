{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "create",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "pattern": "^[a-zA-Z0-9 ]+$"
    },
    "dueDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  },
  "required": ["name", "dueDate"],
  "additionalProperties": false
}